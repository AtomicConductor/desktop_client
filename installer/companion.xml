<project>
    <shortName>companion</shortName>
    <fullName>Conductor Companion</fullName>
    <version>unversioned</version>
    <wrapLicenseFileText>0</wrapLicenseFileText>
    <leftImage>./left.png</leftImage>
    <splashImage>./splash.png</splashImage>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/linux64/v8_context_snapshot.bin</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/linux64/resources.pak</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/linux64/nw_200_percent.pak</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/linux64/nw_100_percent.pak</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/linux64/icudtl.dat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/linux64/crashpad_handler</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/linux64/conductor-companion</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>/artifacts/build/conductor-companion/linux64/swiftshader</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>/artifacts/build/conductor-companion/linux64/locales</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>/artifacts/build/conductor-companion/linux64/lib</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux64</name>
                    <platforms>linux-x64</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/v8_context_snapshot.bin</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/resources.pak</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/nw.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/nw_elf.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/nw_200_percent.pak</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/nw_100_percent.pak</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/notification_helper.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/node.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/libGLESv2.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/libEGL.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/icudtl.dat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/ffmpeg.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/d3dcompiler_47.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/credits.html</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/win64/conductor-companion.exe</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>/artifacts/build/conductor-companion/win64/swiftshader</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>/artifacts/build/conductor-companion/win64/locales</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows64</name>
                    <platforms>windows-x64</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/artifacts/build/conductor-companion/osx64/conductor-companion.app</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <createOsxBundleDmg>1</createOsxBundleDmg>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Conductor Technologies</vendor>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>

